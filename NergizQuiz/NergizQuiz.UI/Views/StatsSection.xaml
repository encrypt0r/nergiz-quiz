<UserControl x:Class="NergizQuiz.UI.Views.StatsSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NergizQuiz.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <StackPanel Margin="15,10" >
            <TextBlock Text="{Binding TimeElapsed,FallbackValue='Time: {0}',StringFormat='Time Elapsed: {0}' }"  FontSize="18.667" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding TotalNumberOfQuestions,FallbackValue='All of the Questions: {0}',StringFormat='All of the Questions: {0}' }" FontSize="18.667" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding NumberOfCorrectAnswers,FallbackValue='Correct Answers: {0}',StringFormat='Correct Answers: {0}' }" FontSize="18.667" Margin="0,0,0,5"/>
        </StackPanel>

</UserControl>
