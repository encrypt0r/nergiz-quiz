<UserControl x:Class="NergizQuiz.UI.Views.FinishPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NergizQuiz.UI.Views"
             mc:Ignorable="d" 
             Width="794" Height="537">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Awesome!" VerticalAlignment="Center" FontSize="64" Margin="0,38" FontWeight="Light"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding UserName, StringFormat= \{0\}\, your acuracy was}" FontSize="32" Margin="0,68,0,0" Grid.Row="1" VerticalAlignment="Top" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Center" Foreground="{Binding ScoreColor}" TextWrapping="Wrap" Text="{Binding Percentage}" VerticalAlignment="Top" FontSize="72" Margin="0,116,0,0" Grid.Row="1" TextAlignment="Center"/>
        <Button x:Name="button" Content="Restart" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" FontSize="24" Padding="40,10" IsDefault="True" Command="{Binding RestartCommand}" Margin="0,22,0,63" />

    </Grid>
</UserControl>
